class TemperatureInput extends React.Component {
    constructor(props) {
        super(props);
        // this.state = { scale:'',temperature:''}
        this.onChange = this.onChange.bind(this);
    }
    onChange(event) {
        this.props.onTemperatureChange(event.target.value);
    }
    render() { 
        return (
            <fieldset>
                <legend>Enter Temperature in {scaleName[this.props.temperature]}</legend>
                <input value={this.props.temperature} onChange={this.onChange} />
            </fieldset>

          );
    }

}
function toCelsius(fahrenheit) {
    return (fahrenheit - 32) * 5 / 9;
}
  
function toFahrenheit(celsius) {
    return (celsius * 9 / 5) + 32;
}
class Calulator extends React.Component{
    constructor(props){
        super(props);
        this.state = { scale:'',temperature:''}
    }
    handleSHE2HUA(){
        this.setState(
            {scale:'she',temperature}
        )
    }
    handleHUA2SHE(){
        this.setState(
            {scale:'hua',temperature}
        )
    }
}
export default TemperatureInput;